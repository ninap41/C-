@{
    ViewData["Title"] = "Home Page";
}
@model newloginreg.Models.User

<div class="Nav">
       <h1>Create User</h1>
       <h3 >Register and Login</h3> 
        <a href="https://github.com/ninap41"><p>Github</p></a>
        <a asp-action="Index"><p>Home</p></a> 



</div>
<h1>Login</h1>
<form asp-action="Login" asp-controller="Home" method="post">
    <span asp-validation-for="Email"></span>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div><BR><BR><BR>
    <input type="submit" value="Login">
</form>


<h1 class="center">Register</h1>
<form asp-action="Register" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName">
        </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <span asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input class="form-control" asp-for="Confirm">
    </div><BR><BR>
    <input id="button" type="submit" value="Submit">
</form>


@{
    @foreach(var user in ViewBag.allUsers)
    {
        @foreach(var kvp in user)
        {
            <h1>@kvp.Key @kvp.Value</h1>

        }
       
    }
}
