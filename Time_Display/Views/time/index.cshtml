<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <meta charset="UTF-8">
         <meta name="viewport" content="width=device-width, initial-scale=1.0">
         <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Time Display:</title>
    </head>
    <body>

         @{
       
    DateTime currentDate = DateTime.Now;
    string formattedDate = String.Format("{0:MMM d, yyyy}", currentDate);
    string formattedTime = String.Format("{0:hh:mm tt}", currentDate);

    }
        <h1>Current Time:</h1>
       
            <p>@formattedDate</p>
            <p>@formattedTime</p>
        

    </body>
</html>