@model loginregistration.Models.RegisterUser
<h1>Resgister</h1>
<form asp-action="Register" asp-controller="Home" method="post">
    <div class="form-align">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input class="form-align" asp-for="FirstName">
    </div>
    <div class="form-align">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input class="form-align" asp-for="LastName">
    </div>
    <div class="form-align">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input class="form-align" asp-for="Email">
    </div>
    <div class="form-align">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input class="form-align" asp-for="Password">
    </div>
    <div class="form-align">
        <span asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input class="form-align" asp-for="Confirm">
    </div>
</form>