@{
    ViewData["Title"] = "Home Page";
}
@model Woods3.Models.Trail
<style>
  
.form_top {padding: 2rem;}
tr {border-bottom:1px double aqua; width: 8rem;}
.head {padding: 2rem;}
   h1 {color: rgb(58, 129, 130);}
   a{text-decoration: none}
   input[value="Add Review"]{width:10re,;}

    
</style>




<table class="Padding_Please">
    <legend><h1 class="head">Hiking Trails</h1></legend>
    <tr>
    
    <th>Trail Name</th>
    <th>Description </th>
    <th> Trail Length </th>
    <th> Elevation Gain </th>
    <th>Latitude</th>
     <th>Longitude</th>
    </tr>


   @foreach(var trail in ViewBag.allTrails)
            {
                  <tr>
                    <td><a href="/@trail.Id">@trail.Trail_Name</a></td>
                    <td>@trail.Description</td>
                    <td>@trail.Trail_Length miles</td>
                    <td>@trail.Elevation_Change ft</td>
                    <td>@trail.Latitude °</td>
                    <td>@trail.Longitude °</td>
                </tr>
            }


</table>

