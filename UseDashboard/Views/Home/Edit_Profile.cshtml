@model BeltExam.Models.RegisterUser
@using BeltExam.Models
<style>
  
    .Column {margin-left: 10rem;width:50%; vertical-align:top; display:inline-block; }
    label,input,span {margin-top:0px auto;margin-bottom:0px auto;}
    button[value="Wide_Butt"]{width: 10rem;}
    tr {border-bottom:1px double aqua; width: 8rem;}
  .head {padding: 2rem;}
    h1 {color: rgb(58, 129, 130);}
    a{text-decoration: none}
    span{width:100%}

    
</style>

@if(TempData["EditSuccess"] != null)
{
    @TempData["EditSuccess"]
}

@if(ViewBag.IdOfUser.User_Level == "Admin")
{

<div class="Column">
 <span><h1>Edit Profile for: @ViewBag.UserToBeEdited.First_Name</h1></span>
<form action="/edit/@ViewBag.UserToBeEdited.UsersId" method="POST">
    <label for="First_Name">First Name: </label>
    <input asp-for="First_Name" name="First_Name" type="text"><br>
    <span asp-validation-for="First_Name"></span><br>

    <label for="Last_Name">Last Name: </label>
    <input asp-for="Last_Name" name="Last_Name" type="text"><br>
    <span asp-validation-for="Last_Name"></span><br>

    <label for="Email">Email: </label>
    <input asp-for="Email" name="Email" type="email"><br>
    <span asp-validation-for="Email"></span><br>

      <label for="User_Level">UserLevel: </label>
    <select asp-for="User_Level" name="User_Level" type="text"><br>
    <option value="Admin">Admin</option>
    <option value="Normal">Normal</option>
    </select><BR>
    <span asp-validation-for="User_Level"></span><br>

    <label for="Description">Description: </label>
    <input asp-for="Description" name="Description" type="text"><br>
    <span asp-validation-for="Description"></span><br>

    <button type="submit"value="Wide_Butt">Edit @ViewBag.UserToBeEdited.First_Name</button>
</form>
</div>
}

@if(ViewBag.IdOfUser.User_Level == "Normal")
{

<div class="Column">
 <span><h1>Edit Profile for: @ViewBag.UserToBeEdited.First_Name</h1></span>
<form action="/edit/@ViewBag.UserToBeEdited.UsersId" method="POST">
    <label for="First_Name">First Name: </label>
    <input asp-for="First_Name" name="First_Name" type="text"><br>
    <span asp-validation-for="First_Name"></span><br>

    <label for="Last_Name">Last Name: </label>
    <input asp-for="Last_Name" name="Last_Name" type="text"><br>
    <span asp-validation-for="Last_Name"></span><br>

    <label for="Email">Email: </label>
    <input asp-for="Email" name="Email" type="email"><br>
    <span asp-validation-for="Email"></span><br>

      <label for="User_Level">UserLevel: </label>
    <select asp-for="User_Level" name="User_Level" type="text"><br>
    <option value="Normal">You're not admin. You can't change who you are silly.</option>
    <option value="Normal">Normal</option>
    </select><BR>
    <span asp-validation-for="User_Level"></span><br>

    <label for="Description">Description: </label>
    <input asp-for="Description" name="Description" type="text"><br>
    <span asp-validation-for="Description"></span><br>

    <button type="submit"value="Wide_Butt">Edit @ViewBag.UserToBeEdited.First_Name</button>
</form>
</div>
}
}
