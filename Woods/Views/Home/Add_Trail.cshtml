 @{
        try
        {
            foreach(var error in ViewBag.errors)
            {
                //If there are any errors for a field...
                if(@error.Errors.Count > 0)
                {
                    // We show the first error for that field
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
        }   
        catch(Exception ex)
        {
            <p>An error occurred, the message is : @ex.Message</p>
            // The Try catch will catch the error should ViewBag.errors be null 
            // and not display the error to the user
        }
    }


